                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_edittext"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--            android:hint="Email"-->
            <!--            android:textSize="18dp"/>-->

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_profileemail"
            android:layout_below="@+id/input_profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_useremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--            android:hint="Email"-->
            <!--            android:textSize="18dp"/>-->

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_profilemobileno"
            android:layout_below="@+id/input_profileemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:hint="Mobile no">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_usermobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--            android:hint="Email"-->
            <!--            android:textSize="18dp"/>-->

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/text_ChangePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Change Password"
        android:textAllCaps="true"
        android:textColor="@color/blue"
        android:textSize="@dimen/_10sdp" />


    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_27sdp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto"
        android:text="Edit Details"
        android:textAllCaps="true"
        app:cornerRadius="4px" />

</RelativeLayout>

    <View
        android:id="@+id/view_shadow1"
        android:visibility="gone"
        android:background="#70000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/bottom_sheet_reset_password"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>