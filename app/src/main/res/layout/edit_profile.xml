<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <!-- xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_14sdp"
            android:text="Profile"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <ImageView
            android:id="@+id/image_EditLogoProfile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/profile"
            android:src="@drawable/profileicon" />
    </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_below="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_text_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_profileTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_userTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"/>
            <!--            android:hint="Email"-->
            <!--            android:textSize="18dp"/>-->

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_profileTextEmail"
            android:layout_below="@+id/input_profileTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_userTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"/>
            <!--            android:hint="Email"-->
            <!--            android:textSize="18dp"/>-->

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_profileTextMobileNo"
            android:layout_below="@+id/input_profileTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:hint="Mobile no">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edittext_userTextMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"/>
            <!--            android:hint="Email"-->
            <!--            android:textSize="18dp"/>-->

        </com.google.android.material.textfield.TextInputLayout>


        <!--<TextView
            android:id="@+id/text1"
            style="@style/Widget.Material3.Button.ElevatedButton"
